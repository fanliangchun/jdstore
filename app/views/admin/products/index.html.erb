<h2> Product List </h2>

<div class="pull-right" style="padding-bottom: 20px;">
	<%= link_to("Add New Product", new_admin_product_path, :class => "btn btn-primary btn-sm") %>
</div>

<br><br>

<table class="table table-bordered">
	
	<thead>
		<tr>
			<thead>
				<th>#</th>
				<th width="220">Product Pic</th>
				<th>Name</th>
				<th>Price</th>
				<th width="100">Options</th>
			</thead>
		</tr>
	</thead>
	
	<tbody>
	<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td>
				<%= link_to product_path(product) do %>
					<% if product.image.present? %>
						<%= image_tag(product.image.thumb.url, class: "thumbnail") %>
					<% else %>
						<%= image_tag("http://placehold.it/200x200&text=No Picture", class: "thumbnail") %>
					<% end %>
				<% end %>
			</td>
			<td><%= link_to(product.title, admin_product_path(product)) %></td>
			<td><%= product.price %></td>
			<td>
				<%= link_to("Edit", edit_admin_product_path(product)) %> | 
				<%= link_to("Delete", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"}) %>
			</td>
		</tr>
		<% end %>
	</tbody>	
</table>